{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": ["*"]
    },
    "lint": {
      "dependsOn": ["^build", "^lint"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "test": {
      "cache": false
    },
    "test:coverage": {
      "cache": false
    },
    "test:watch": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "env": ["*"]
    }
  }
}
